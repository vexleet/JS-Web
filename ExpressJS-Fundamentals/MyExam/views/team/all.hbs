{{#if isAdmin}}
<h1>Teams</h1>
<h3>Manage Users</h3>
<div class="form">
    <form method="POST" action="/teams">
        <label>User</label>
        <select name="userId">
            {{#each users}}
            <option value="{{_id}}">{{username}}</option>
            {{/each}}
        </select>
        <label>Team</label>
        <select name="teamId">
            {{#each teams}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
        <input type="submit" value="Distribute">
    </form>
</div>
{{else}}
<h1>Teams</h1>
<form class="search" method="POST" action="/search/team">
    <label>Seach: </label>
    <input type="text" name="teamToSearch">
    <input type="submit" value="Search">
</form>
<div class="teams">
    {{#each teams}}
    <div class="team">
        <h2>{{name}}</h2>
        <div class="team-info">
            <h3>Members</h3>
            {{#if members}}
                {{#each members}}
                    <p>{{this.firstName}} {{this.lastName}}</p>
                {{/each}}
            {{else}}
                <p>Team has no members</p>
            {{/if}}
        </div>
        <div class="team-info">
            <h3>Projects</h3>
            {{#if projects}}
                {{#each projects}}
                    <p>{{this.name}}</p>
                {{/each}}
            {{else}}
                <p>Team has no projects</p>
            {{/if}}
        </div>
    </div>
    {{/each}}
</div>
{{/if}}