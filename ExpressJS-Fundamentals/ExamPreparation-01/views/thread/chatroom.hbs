<h1>Chatroom with {{otherUserUsername}}</h1>
{{#if isBlocked}}
<form method="post" class="chat-form" action="/unblock/{{otherUserUsername}}">
    <button class="btn btn-success">Unblock</button>
</form>
{{else}}
<form method="post" class="chat-form" action="/block/{{otherUserUsername}}">
    <button class="btn btn-danger">Block</button>
</form>
{{/if}}

<div class="chat-wrapper">
    <div id="message-wrapper">
        {{#each messages}}
        {{#if userReceiver}}
            {{#if isImage}}
            <div class="message-row">
                <img class="thread-message left" src="{{content}}">
            </div>
            {{else}}
                <div class="message-row">
                    <span class="thread-message left">{{content}}</span>
                </div>
            {{/if}}
            
        {{else}}
            {{#if isImage}}
            <div class="message-row">
                <img class="thread-message right" src="{{content}}">
            </div>
            {{else}}
                <div class="message-row">
                    <span class="thread-message right">{{content}}</span>
                </div>
            {{/if}}
        {{/if}}

        {{/each}}
    </div>
    {{#if disableChat}}
    <form method="" class="chat-form">
        <textarea rows="5" name="message" placeholder="message" disabled></textarea>
        <input value="5c540d5fac257e190c076fc0" name="threadId" hidden />
        <button class="btn btn-primary send">Send</button>
    </form>
    {{else}}
    <form method="post" class="chat-form">
        <textarea rows="5" name="message" placeholder="message"></textarea>
        <input value="5c540d5fac257e190c076fc0" name="threadId" hidden />
        <button class="btn btn-primary send">Send</button>
    </form>
    {{/if}}
    
</div>